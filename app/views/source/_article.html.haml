.article 
  .rank
    %a.like 0
    %a.comment 0
  .entry 
    %h3.title 
      %a{:href => s_path(entry.short_url),:target => "_blank"}
        =entry.title
    %span.date 
      =entry.date_published.try(:to_date)
    .brief
      %span.source
        -if entry.source.url
          %a{:href => entry.source.url}
            =entry.source.name
        -else
          =entry.source.name
        \-
      =entry.description
    -if entry.tags.count > 0
      .tags 
        Tags:
        -entry.tags.each_with_index do |tag,index|
          %a{:href => url_for(tag)} 
            =tag.name
  .clear
  .seperator

